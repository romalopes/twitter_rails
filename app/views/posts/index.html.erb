<p style="color: green"><%= notice %></p>
<% content_for :title, "Posts" %>
<h1>Posts</h1>
<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>
<p>
  <%= link_to "New post", new_post_path, style: "color: gold;" %>
  <br>
</p>
<div>
  <%= link_to "Back to Home", root_path, style: "color: gold;" %>
</div>
